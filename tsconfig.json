{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "commonjs",                     
    "lib": ["es2017"],                        
    "allowJs": true,                          
    "jsx": "react-native",                    
    "noEmit": true,                           
    "isolatedModules": true,                      
    "strict": true,                           
    "moduleResolution": "node",               
    "baseUrl": "./",                          
    "paths": { 
      "@*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                  
    "skipLibCheck": false,
    "typeRoots": [
      "node_modules/@types/",
      "./src/*",
    ]                    
  },
  "exclude": [
    "node_modules", "node_modules/*", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
